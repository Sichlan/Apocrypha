<UserControl x:Class="Apocrypha.WPF.Styles.IconDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Apocrypha.WPF.Styles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <WrapPanel>
            <ContentPresenter Content="{StaticResource IconInformation}"/>
            <ContentPresenter Content="{StaticResource IconWarning}"/>
            <ContentPresenter Content="{StaticResource IconSuccess}"/>
            <ContentPresenter Content="{StaticResource IconError}"/>
        </WrapPanel>  
    </Grid>
</UserControl>
