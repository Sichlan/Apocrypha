<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Border}" x:Key="CategoryBorderStyle">
        <Setter Property="BorderBrush" Value="{StaticResource BrushPrimary2}" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Background" Value="{StaticResource BrushBackgroundWhite}" />
        <Setter Property="CornerRadius" Value="9" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Gray" BlurRadius="10" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- <Style TargetType="{x:Type Border}" BasedOn="{StaticResource BaseBorderStyle}"> -->
    <!--      -->
    <!-- </Style> -->
</ResourceDictionary>